[Unit]
Description=flanneld
After=etcd-setup.service
Requires=etcd.service

[Service]
Restart=on-failure
RestartSec=20
TimeoutStartSec=0
ExecStartPre=-/usr/bin/docker kill flanneld
ExecStartPre=-/usr/bin/docker rm -v flanneld
ExecStart=/usr/bin/docker -H unix:///var/run/docker-bootstrap.sock run \
	-name=flanneld \
	--net=host \
	--privileged \
	-v /dev/net:/dev/net \
	quay.io/coreos/flannel:0.3.0
ExecStop=/usr/bin/docker stop flanneld

[Install]
WantedBy=multi-user.target
