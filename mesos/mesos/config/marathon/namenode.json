{
  "id": "namenode",
  "cpus": 0.5,
  "mem": 512,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "twistedogic/namenode:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 50070, "hostPort": 0, "servicePort": 50070, "protocol": "tcp" },
        { "containerPort": 8020, "hostPort": 0, "servicePort": 8020, "protocol": "tcp" }
      ]
    }
  }
}
