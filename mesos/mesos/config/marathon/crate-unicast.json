{
  "id": "crate-mesos-unicast",
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "crate:0.48.2",
      "privileged": true,
      "network": "HOST"
    },
    "volumes": [
      {
        "containerPath": "/data",
        "hostPath": "/data/crate",
        "mode": "RW"
      }
    ]
  },
  "instances": 3,
  "cpus": 0.5,
  "mem": 2048,
  "uris": [],
  "cmd": "crate -Des.cluster.name=mesos-unicast -Des.zen.discovery.minimum_master_nodes=2",
  "env": {
    "CRATE_HOSTS": "10.0.0.129:4300,10.0.0.130:4300,10.0.0.131:4300",
    "CRATE_HEAP_SIZE": "1024m"
  },
  "constraints": [
    [
      "hostname",
      "UNIQUE"
    ]
  ],
  "ports": []
}
