{
  "id": "chronos",
  "cmd": "/chronos/bin/start-chronos.bash --master zk://10.0.0.129:2181/mesos --zk_hosts 10.0.0.129:2181 --http_port 8081",
  "cpus": 1,
  "mem": 1024,
  "instances": 1,
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "twistedogic/chronos:latest",
      "network": "BRIDGE",
      "portMappings": [
        { "containerPort": 8081, "hostPort": 0, "servicePort": 8081, "protocol": "tcp" }
      ]
    }
  }
}
