{
  "id": "/services",
  "groups": [
    {
      "id": "/services/kv-store",
      "apps": [
        {
          "id": "hsqldb",
          "cpus": 1,
          "mem": 2048,
          "instances": 1,
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "springxd/hsqldb:latest",
              "network": "BRIDGE",
              "portMappings": [
                { "containerPort": 9101, "hostPort": 0, "servicePort": 9101, "protocol": "tcp" }
              ]
            }
          }
        },
        {
          "id": "redis",
          "cpus": 0.5,
          "mem": 512,
          "instances": 1,
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "redis:latest",
              "network": "BRIDGE",
              "portMappings": [
                { "containerPort": 6379, "hostPort": 0, "servicePort": 6379, "protocol": "tcp" }
              ]
            }
          }
        },
        {
          "id": "zookeeper",
          "cpus": 1,
          "mem": 512,
          "instances": 1,
          "container": {
            "type": "DOCKER",
            "docker": {
              "image": "mattf/zookeeper",
              "network": "BRIDGE",
              "portMappings": [
                { "containerPort": 2181, "hostPort": 0, "servicePort": 2181, "protocol": "tcp" }
              ]
            }
          }
        }
      ]
    }
  ]
}
